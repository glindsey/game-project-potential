<name>Bauxite</name>
<description>Bauxite is an aluminium ore and is the main source of aluminium.</description>

<display>
	<color>C2B280FF</color>
	<opaque>true</opaque>
	<visible>true</opaque>
</display>

<physical>
	<phase>solid</phase>
	<hardness>20</hardness>
	<specificgravity>3000</specificgravity>
	<melttemp>1600</melttemp>
</physical>

<attributes>
	<rock>true</rock>
	<ore>aluminium</ore>
</attributes>

<actions>
	<melt><becomes>magma</becomes></melt>
</actions>

<terrain>
	<largedeposit>
		<chalk />
		<chert />
		<claystone />
		<conglomerate />
		<halite />
		<dolomite />
		<limestone />
		<mudstone />
		<sandstone />
		<shale />
		<siltstone />
	</largedeposit>
</terrain>