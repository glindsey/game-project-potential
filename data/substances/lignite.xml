<display>
	<color>3D2B1FFF</color>
	<opaque>true</opaque>
	<visible>true</opaque>
</display>

<physical>
	<phase>solid</phase>
	<hardness>5</hardness>
	<specificgravity>801</specificgravity>
	<burntemp>400</burntemp>
</physical>

<attributes>
