<name>azurite</name>
<description>Azurite is a soft, deep blue copper mineral produced by weathering of copper ore deposits.  It weathers in the presence of air to become malachite.</description>

<display>
	<color>1E1EC8FF</color>
	<opaque>true</opaque>
	<visible>true</opaque>
</display>

<physical>
	<phase>solid</phase>	
	<hardness>35</hardness>
	<specificgravity>3770</specificgravity>
	<melttemp>1600</melttemp>
</physical>

<attributes>
	<rock>true</rock>
	<ore>copper</ore>
</attributes>

<actions>
	<melt><becomes>magma</becomes></melt>
	<weather><becomes>malachite</becomes></weather>
</actions>

