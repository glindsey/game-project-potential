<name>Halite</name>
<description>Halite, commonly known as rock salt, is the mineral form of sodium chloride (NaCl).</description>

<display>
	<color>FFFFFF80</color>
	<opaque>false</opaque>
	<visible>true</opaque>
</display>

<physical>
	<phase>solid</phase>
	<hardness>25</hardness>
	<specificgravity>2170</specificgravity>
	<melttemp>801</melttemp>
</physical>

<attributes>
	<rock>true</rock>
</attributes>

<actions>
	<melt><becomes>molten-salt</becomes></melt>
	<grind><becomes>salt</becomes></grind>
</actions>

<terrain>
	<layer>sedimentary</layer>
</terrain>