		<limestone />
		<mudstone />
		<sandstone />
		<shale />
		<gneiss />
		<marble />
		<phyllite />
		<quartzite />
		<schist />
		<slate />
		<diorite />
		<gabbro />
		<granite />		
	</smalldeposit>
	<rarity>3</rarity>
</terrain>